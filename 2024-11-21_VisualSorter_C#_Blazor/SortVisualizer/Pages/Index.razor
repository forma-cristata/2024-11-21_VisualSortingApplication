@page "/"

<PageTitle>Visual Sorter</PageTitle>
<html data-bs-theme="dark">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
<table id="top-table">
    <tr>
        <td>
            <h2>Visual Sorter</h2>

            <h5>Student Name: Kaci Craycraft</h5>
            <h5>Student Username: kcraycraft45</h5>
        </td>
        <td>
            <h4>Settings</h4>

            <label style="float: left;" class="form-label d-inline-block" for="sort-algs">Sorting algorithm:</label>

                <select  class="form-select d-inline-block w-50" style="float: none;" name="sort-algs" id="sort-alg" @onchange="ChangeAlgorithmToRun">
                <option value="bubble">Bubble Sort</option>
                <option value="cocktail">Cocktail Shaker Sort</option>
                <option value="comb">Comb Sort</option>
                <option value="gnome">Gnome Sort</option>
                <option value="insert">Insertion Sort</option>
                <option value="merge">Mergesort</option>
                <option value="oddeven">Odd Even Sort</option>
                <option value="quick">Quicksort</option>
                <option value="select">Selection Sort</option>
                <!-- TODO: Add options for your new algorithms here -->
            </select>

            <br />

            <label class="form-label" style="float: left;" for="seed">Random seed: </label>
            <input class="form-control w-25 ml-2" style="float: left;" type="number" id="seed" name="seed" @bind="Seed" />

            <button style="float: none;" class="btn btn-secondary" @onclick="() => ResizeOrRandomizeArray()">Randomize</button>

            <br />

            <label class="form-label" style="float: left;" for="elements">Number of elements: </label>
            <input class="form-control w-25" style="float: left;" type="number" min="10" step="10" id="elements" name="elements" @bind="ArraySize" />

            <button class="btn btn-secondary" style="float: none;" id="resize-btn" @onclick="() => ResizeOrRandomizeArray()">Resize</button>

            <br />

                <button class="btn btn-primary" @onclick="() => BeginSort()">Go!</button>
                <button class="btn btn-secondary" @onclick="() => Reset()">Reset</button>
        </td>
        <td>
            @if (displayResults == true && CurrentAlgorithm != null)
            {
                <h4>Results:</h4>

                <div>Worst case complexity: @((MarkupString)ComplexityToHTML(CurrentAlgorithm.WorstCaseComplexity))</div>
                <div>Average case complexity: @((MarkupString)ComplexityToHTML(CurrentAlgorithm.AverageCaseComplexity))</div>
                <div>Best case complexity: @((MarkupString)ComplexityToHTML(CurrentAlgorithm.BestCaseComplexity))</div>
            }
        </td>
    </tr>
</table>

<div class="flex-box">
        @for (int i = 0; i < Array.Length; i++)
    {
        <div style="height: @(Array[i]/2)px; background-color: @(Colors[(Array[i]-1)/4])"></div>
    }
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>